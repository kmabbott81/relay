# Relay AI Beta Environment Configuration
# Copy to .env.local and fill in your values

# Environment
RELAY_ENV=staging
NODE_ENV=production

# Supabase (from supabase.com dashboard)
DATABASE_URL=postgresql://postgres:[password]@[project-ref].supabase.co:5432/postgres
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=eyJ... # Your anon key
SUPABASE_SERVICE_KEY=eyJ... # Your service key (keep secret!)
SUPABASE_JWT_SECRET=your-jwt-secret-from-settings # Get from Settings > API

# Security Keys (generate with: openssl rand -hex 32)
MEMORY_TENANT_HMAC_KEY=generate-64-char-hex-key-here
ENCRYPTION_KEY=generate-32-char-hex-key-here

# CORS (your domains)
CORS_ORIGINS=https://relay-beta.vercel.app,https://beta.relay.ai,http://localhost:3000

# OpenAI (for embeddings)
OPENAI_API_KEY=sk-...

# Storage (choose one)
# Option A: Supabase Storage
STORAGE_BACKEND=supabase
STORAGE_BUCKET=user-files

# Option B: Cloudflare R2
# STORAGE_BACKEND=r2
# R2_ACCOUNT_ID=...
# R2_ACCESS_KEY_ID=...
# R2_SECRET_ACCESS_KEY=...
# R2_BUCKET=relay-beta-files

# Email (for beta invites)
RESEND_API_KEY=re_... # or use Supabase email

# Beta Settings
BETA_MODE=true
BETA_USER_LIMIT=50
DAILY_QUERY_LIMIT=100
MAX_FILE_SIZE_MB=10

# Analytics (optional)
POSTHOG_KEY=phc_...
SENTRY_DSN=https://...

# URLs
NEXT_PUBLIC_API_URL=https://relay-api-beta.railway.app
NEXT_PUBLIC_APP_URL=https://relay-beta.vercel.app
